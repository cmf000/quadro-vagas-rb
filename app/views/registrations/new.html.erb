<section class="w-full max-w-3xl mx-auto px-6 py-2">
  <h1 class="text-3xl text-center font-bold text-gray-900 mb-6"><%= t(".title") %></h1>

  <%= form_with scope: :user, url: registration_path, class: "space-y-3" do |f| %>
    <div class="flex flex-col md:flex-row md:space-x-6 space-y-6 md:space-y-0">
      <div class="flex-1">
        <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, required: true, autofocus: true, autocomplete: "username",
            placeholder: t(".placeholder.name"),
            class: "w-full px-3 py-1 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        <%= form_errors @user, :name %>
      </div>

      <div class="flex-1">
        <%= f.label :last_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :last_name, required: true, autocomplete: "family-name",
            placeholder: t(".placeholder.last_name"),
            class: "w-full px-3 py-1 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        <%= form_errors @user, :last_name %>
      </div>
    </div>

    <div>
      <%= f.label :email_address, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email_address, required: true, autofocus: true, autocomplete: "email",
          placeholder: t(".placeholder.email_address"),
          class: "w-full px-3 py-1 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      <%= form_errors @user, :email_address %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password, required: true, autocomplete: "new-password",
          placeholder: t(".placeholder.password"),
          class: "w-full px-3 py-1 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      <%= form_errors @user, :password %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password",
          placeholder: t(".placeholder.password_confirmation"),
          class: "w-full px-3 py-1 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      <%= form_errors @user, :password_confirmation %>
    </div>

    <div>
      <%= f.submit t(".submit"),
          class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <div class="text-center mt-6 text-sm text-gray-500">
    <%= t(".already_have_account") %>
    <%= link_to t(".sign_in"), new_session_path, class: "font-medium text-blue-600 hover:text-blue-500 transition-colors duration-200 underline hover:no-underline" %>
  </div>
</section>